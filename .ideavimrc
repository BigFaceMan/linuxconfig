""" Map leader to space ---------------------
let mapleader=" "

""" Plugins  --------------------------------
set surround
set multiple-cursors
set commentary
set argtextobj set easymotion
set textobj-entire
set ReplaceWithRegister
set NERDTree

""" Plugin settings -------------------------
let g:argtextobj_pairs="[:],(:),<:>"

""" Common settings -------------------------
set showmode
set so=5
set incsearch
set nu
set visualbell
set noerrorbells

""" Idea specific settings ------------------
set ideajoin
set idearefactormode=keep
et incsearch
"共享剪切板
set clipboard+=unnamed
"--在搜索时忽略大小写
set ignorecase
"--将搜索匹配的文本高亮显示
set hlsearch
"--设置相对行号 和 当前行的绝对行号
set number relativenumber
"--设置返回normal模式时回到英文输入法
set keep-english-in-normal
""" Mappings --------------------------------
map <leader>d <Action>()
map <leader>r <Action>(RenameElement)
map <leader>c <Action>(Stop)
map <leader>z <Action>(ToggleDistractionFreeMode)
map <leader>f <Action>(GotoFile)
map <leader>s <Action>(FindInPath)
map gi <Action>(GotoImplementation)

""" nmap
nnoremap <C-j> 3j
nnoremap <C-k> 3k
nnoremap H ^
nnoremap L $
nnoremap <C-o> :action Back<CR>
nnoremap <C-i> :action Forward<CR>
nnoremap K i<CR><Esc>
nnoremap <leader>e :action NERDTreeFocus<CR>

""" vmap
vmap <C-j> 3j
vmap <C-k> 3k
vmap H ^
vmap L $

""" imap
imap jj <Esc>